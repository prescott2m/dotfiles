<?xml version="1.0"?>
<labwc_config>
  <desktops number="1" />
  <theme>
    <name>BlackAndWhite</name>
    <cornerRadius>0</cornerRadius>
    <font name="sans" size="13" />
  </theme>

  <keyboard>
    <default />

    <keybind key="W-grave"><action name="Execute" command="screenshot-p2m -sc" /></keybind>
    <keybind key="W-space"><action name="Execute" command="wmenu-run" /></keybind>
    <keybind key="W-Return"><action name="Execute" command="foot" /></keybind>
    <keybind key="W-w"><action name="Execute" command="librewolf" /></keybind>
    <keybind key="W-e"><action name="Execute" command="thunar" /></keybind>
    <keybind key="W-t"><action name="Execute" command="foot" /></keybind>

    <keybind key="XF86AudioPlay"><action name="Execute" command="playerctl play-pause" /></keybind>
    <keybind key="XF86AudioLowerVolume"><action name="Execute" command="volume-p2m l" /></keybind>
    <keybind key="XF86AudioRaiseVolume"><action name="Execute" command="volume-p2m" /></keybind>

    <keybind key="W-0"><action name="ToggleDecorations" /></keybind>
    <keybind key="W-Up"><action name="ToggleMaximize" /></keybind>
    <keybind key="W-Down"><action name="Iconify" /></keybind>
    <keybind key="W-q"><action name="Close" /></keybind>

    <keybind key="W-F4"><action name="None" /></keybind>
  </keyboard>

  <mouse>
    <default />

    <context name="Root">
      <mousebind button="Right" action="Press"><action name="ShowMenu" menu="root-menu" /></mousebind>
      <mousebind button="Left" action="Press"><action name="None" /></mousebind>
    </context>
  </mouse>
</labwc_config>
